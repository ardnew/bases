  "version": "0.2.0",
  "configurations": [
    {
      "name": "Test eval",
      "type": "go",
      "request": "launch",
      "mode": "test",
      //"program": "${workspaceFolder}",
      "program": "lang/eval",
      "args": [
        "-test.failfast",
        "-test.run=TestEvalString"
      ],
      "env": {
        "EXPR_FILE": "/dev/stderr",
        "EXPR_FORMAT": "[%t] %f:%n ┆ %s",
        // "STREAM_FILE": "/dev/stderr",
        // "STREAM_FORMAT": "[%t] %f:%n ┆ %s",
      },
      "dlvFlags": [],
      "stopOnEntry": true, // NOT "stop on main entry"
    }
  ]
}
