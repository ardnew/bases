  "version": "0.2.0",
  "configurations": [
    {
      "name": "Test eval",
      "type": "go",
      "request": "launch",
      "mode": "test",
      //"program": "${workspaceFolder}",
      "program": "lang/eval",
      "args": [
        "-test.failfast",
        "-test.run=TestEvalString"
      ],
      "env": {
        "SYM_FILE": "/dev/stderr",
        "SYM_FORMAT": "[%t] SYM %f:%n ┆ %s",
        "PARSE_FILE": "/dev/stderr",
        "PARSE_FORMAT": "[%t] PARSE %f:%n ┆ %s",
      },
      "dlvFlags": [],
      "stopOnEntry": true, // NOT "stop on main entry"
    }
  ]
}
